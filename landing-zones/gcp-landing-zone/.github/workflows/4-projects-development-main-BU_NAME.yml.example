name: '4-projects - development - apply'
env:
  ENV_NAME: development
  PROJECT_NAME: BU_NAME
  PROJECT_ID: PRJ_B_CICD_XXXX
  SECRET_ID: INSERT_SECRET_KEY
  BRANCH_NAME: INSERT_MAIN_BRANCH
  GAR_REGION: INSERT_GAR_REGION
on:
  push:
    branches:
      - INSERT_MAIN_BRANCH
    paths:
      - 4-projects/BU_NAME/development/**

jobs:
  deployment:
    name: "terraform apply"
    runs-on: INSERT_RUNNER_LABEL
    defaults:
      run:
        working-directory: 4-projects/BU_NAME/development/
    permissions:
      pull-requests: 'write'
      contents: read
      id-token: write
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v2.3.5
        with:
          fetch-depth: 0
      - name: Setup gcloud
        uses: google-github-actions/setup-gcloud@v0
        with:
          version: '338.0.0'

      - name: Trigger build
        run: |
          cd ${{ github.workspace}}/build
          gcloud builds submit --config=github-ssh-cloudbuild-apply.yml \
            --project=${{ env.PROJECT_ID }} \
            --substitutions=_SECRET_ID=${{ env.SECRET_ID }},_GIT_HEAD_BRANCH=${{ env.BRANCH_NAME }},_GIT_LZ_REPO="${{ github.repository }}.git",_GIT_WORK_DIR="${GITHUB_REPOSITORY##*/}/4-projects/BU_NAME/development",_GAR_REGION=${{ env.GAR_REGION}}

      - name: "Report Status as Slack Notification"
        if: failure()
        uses: vishal-kapse/slack-notify-action@v1.0
        with:
          SLACK_WEBHOOK_URL: ${{ secrets.SLACK_WEBHOOK_URL }} # required
          message: "Github workflow run has status ${{ job.status }}"
